<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#c0d6e4"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="25dp"
            android:textSize="32dp"
            android:text="Title" />

        <EditText
            android:id="@+id/etDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tvTitle"
            android:layout_below="@+id/tvTitle"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:text="Description of the item which will be there in the edit text of the layout so that some one can be "
            android:inputType="textMultiLine" />

        <ImageView
            android:id="@+id/imageListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/btn"
            android:layout_alignEnd="@+id/btn"
            android:layout_alignStart="@+id/btn"
            android:layout_alignTop="@+id/tvTitle"
            app:srcCompat="@android:drawable/ic_menu_report_image"
            android:layout_alignRight="@+id/btn"
            android:layout_alignLeft="@+id/btn" />

        <TextView
            android:id="@+id/btn"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="19dp"
            android:text="Found"
            android:textSize="30dp"
            android:layout_alignBottom="@+id/etDescription"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="19dp"
            android:layout_alignParentRight="true" />
    </RelativeLayout>
</LinearLayout>
